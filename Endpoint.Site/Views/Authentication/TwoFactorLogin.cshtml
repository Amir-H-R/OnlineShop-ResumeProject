@model LoginDto
@{
    ViewData["Title"] = "TwoFactorLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-area">

    <!-- PAGE -->
    <section class="page-section color">
        <div class="container" dir="ltr">
            <div class="row">
                <div class="col-sm-6">
                    <h3 class="block-title"><span>Dashboard</span></h3>
                    <form class="form-login" method="post" asp-action="TwoFactorLogin" asp-controller="Authentication">
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Code"></label>
                                <div class="form-group"><input asp-for="Code"></div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group"><input asp-for="IsPersistent" type="hidden" style="pointer-events:none"></div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group"><input asp-for="Provider" type="hidden" style="pointer-events:none"></div>
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn">Verify</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- /PAGE -->
</div>

